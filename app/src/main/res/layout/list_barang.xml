<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/imgBarang"
        android:src="@drawable/ic_bike"
        android:layout_margin="8dp"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imgBarang"
        android:text="@string/nama"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBarang"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgBarang"
        android:text="Harga"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvLabel_stok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHarga"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgBarang"
        android:text="Stok : "
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvStok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHarga"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvLabel_stok"
        android:text="90"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvLabel_satuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStok"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgBarang"
        android:text="Satuan : "
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvSatuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStok"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvLabel_satuan"
        android:text="90"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imgUpdate"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_edit"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_delete"
        android:layout_below="@+id/imgUpdate"
        tools:ignore="ContentDescription" />

</RelativeLayout>